/* pages/charge/charge.wxss */
/*车费余额*/
.balance {
  width: 100%;
  height: 150rpx;
  margin-top: 30rpx;
  margin-bottom: 30rpx;
}
.balance image {
  float: left;
  display: block;
  height: 120rpx;
  width: 120rpx;
  margin: 15rpx 60rpx 15rpx 50rpx;
}
.balance .txt {
  display: flex;
  flex-direction: column;
}
.balance .money {
  font-size: 1.5em;
  margin-top: 20rpx;
  margin-bottom: 10rpx;
}
.balance .chinese {
  color: #808080;
  text-indent: 10rpx;
  font-size: smaller;

}
/*充值金额*/
.balance-money {
  line-height: 100rpx;
  background-color: #efe;
}
.balance-money text{
  margin-left: 40rpx;
  margin-bottom: 30rpx;
  margin-top: 30rpx;
}
/*充值金额分类*/
.balance-demo {
  padding: 40rpx 0 30rpx 0;
  width: 100%;
  background-color: #fff;
  padding-left: 45rpx;
}
.balance-demo button {
  display: inline-block;
  width: 300rpx;
  height: 120rpx;
  margin: 10rpx 15rpx;
  background-color: transparent;
  border: 1px solid limegreen;
}
.balance-demo button.selected {
  background-color: limegreen;
  border: 1px solid limegreen;
  color: #fff;
}
.input{
  margin-top: 20rpx;
}
/*<!--去充值模块-->*/
.goblance {
  width: 100%;
  box-sizing: border-box;
  margin-top: 50rpx;
  padding: 0 60rpx 0 20rpx;
  text-align: center;
}
.goblance button {
  margin: 20rpx 15rpx;
  background-color: limegreen;
  border: 1px solid limegreen;
}

.blank{
  height: 30rpx;
  background-color: #efe;
}
